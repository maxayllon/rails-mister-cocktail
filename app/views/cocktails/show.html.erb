<h1>Cocktail</h1>
<div class="container">
  <h2> <%= @cocktail.name %> </h2>
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
    <%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit 'Save your dose', class: "btn btn-primary"%>
  <% end %>
  <%= link_to "Back", cocktails_path %>
</div>
