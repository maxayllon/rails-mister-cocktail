<h1>Cocktail</h1>
<h2> <%= @cocktail.name %> </h2>

<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %></li>
  <%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%= f.submit 'Save your dose', class: "btn btn-primary"%>
<% end %>


<%= link_to "Back", cocktails_path %>


